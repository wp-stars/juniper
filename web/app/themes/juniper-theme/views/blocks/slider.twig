					<div class="timeline-slide w-full flex flex-col items-start justify-start swiper-slide">
						<p class="bold bg-dark text-primary p-4 text-4xl bold mb-10">{{ loop.index }}.</p>
						<h3 class="mb-3 text-left">{{ item.slider_title }}</h3>

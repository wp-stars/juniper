{#
 	Title: Slider
 	Description: Displays a slider
 	Category: formatting
 	Icon: admin-comments
 	Keywords: slider
 	Mode: edit
 	Align: full
 	PostTypes: page post jobs projects services
 	SupportsAlign: left right full
 	SupportsMode: true
 	SupportsMultiple: true
#}
{% if fields.style == "split" %}
	<div class="w-full relative mt-[6.5rem] mb-[3rem] sm:mb-[4rem] split-slider split-slider-wrapper-{{ instance }} {{ fields.split_slider_static_items.slider_side }} {{ fields.split_slider_static_items.background_style }}">
		<div class="bg-dark absolute split-slider-background background h-full">
		</div>
		<div class="container min-h-[600px] py-32 mx-auto slider relative">
			<div class="grid grid-cols-12 gap-y-8 sm:gap-x-8">
				{% if fields.split_slider_static_items.slider_side == "right" %}
					<div class="col-span-12 flex flex-coljustify-content-end">
						{% if fields.split_slider_static_items.tagline_over_slider %}
							<p class="tagline">{{ fields.split_slider_static_items.tagline_over_slider }}</p>
						{% endif %}
						{% if fields.split_slider_static_items.title_over_slider %}
							<h3 class="mb-12 title">{{ fields.split_slider_static_items.title_over_slider }}</h3>
						{% endif %}
					</div>
					<div class="left col-span-12 sm:col-span-6 text-white h-full flex flex-col {{ fields.split_slider_static_items.text_alignment }}">
						<h2 class="mb-8 title">{{ fields.split_slider_static_items.title }}</h2>
						<div class="mb-6 intro-text">{{ fields.split_slider_static_items.text }}</div>
						{% if fields.split_slider_static_items.link %}
							<a class="btn btn-primary w-fit" href="{{ fields.split_slider_static_items.link.url }}">{{ fields.split_slider_static_items.link.title }}</a>
						{% endif %}
					</div>
					<div class="right col-span-12 sm:col-span-6">
						<div class="sm:absolute sm:w-full">
							<div class="swiper split-swiper-{{ instance }}">
								<div class="swiper-wrapper">
									{% for slide in fields.split_slider_items %}
										<div class="swiper-slide {{ fields.split_slider_static_items.slide_style }}" style="background-image: url('{{ slide.slider_image.url }}');">
											<div class="slide-inner h-full w-full flex flex-col items-end justify-end p-4 {{ fields.split_slider_static_items.slide_style }}">
												{% if fields.split_slider_static_items.slide_style == "overlay" %}
													<div class="title-wrapper">
														<h5>{{ slide.slider_title }}</h5>
													</div>
												{% else %}
													{% if slide.slider_title %}<h5 class="mb-3">{{ slide.slider_title }}</h5>{% endif %}
												{% endif %}
												<a class="w-full btn btn-underline" href="{{ slide.link.url }}">
													{{ slide.link.title }}
												</a>
											</div>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
						<div class="w-full controls-wrapper inline-flex w-full justify-between relative">
							<div class="swiper-button-prev bg-primary w-fit p-3">
								<svg xmlns="http://www.w3.org/2000/svg" width="42" height="25" viewBox="0 0 42 25" fill="none">
									<path d="M12.5061 1.9876L1.99991 12.4938L12.5061 23" stroke="#093642" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
									<rect x="31.4939" y="14.2446" width="15.7593" height="3.50207" rx="1.75103" transform="rotate(-180 31.4939 14.2446)" fill="#093642"/>
									<rect x="42" y="14.2446" width="7.00413" height="3.50207" rx="1.75103" transform="rotate(-180 42 14.2446)" fill="#093642"/>
								</svg>
							</div>
							<div class="swiper-pagination"></div>
							<div class="swiper-button-next bg-primary w-fit p-3">
								<svg xmlns="http://www.w3.org/2000/svg" width="42" height="25" viewBox="0 0 42 25" fill="none">
									<path d="M29.4939 23.0124L40.0001 12.5062L29.4939 2" stroke="#093642" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
									<rect x="10.5061" y="10.7554" width="15.7593" height="3.50207" rx="1.75103" fill="#093642"/>
									<rect y="10.7554" width="7.00413" height="3.50207" rx="1.75103" fill="#093642"/>
									</svg>	
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-span-12 flex flex-col justify-content-start">
						{% if fields.split_slider_static_items.tagline_over_slider %}
							<p class="tagline">{{ fields.split_slider_static_items.tagline_over_slider }}</p>
						{% endif %}
						{% if fields.split_slider_static_items.title_over_slider %}
							<h3 class="mb-12 title">{{ fields.split_slider_static_items.title_over_slider }}</h3>
						{% endif %}
					</div>
					<div class="left col-span-12 sm:col-span-4">
						<div class="swiper split-swiper-{{ instance }}">
							<div class="swiper-wrapper">
								{% for slide in fields.split_slider_items %}
									<div class="swiper-slide h-[400px] {{ fields.split_slider_static_items.slide_style }}" style="background-image: url('{{ slide.slider_image.url }}');">
										<div class="slide-inner h-full w-full flex flex-col items-end justify-end p-4 {{ fields.split_slider_static_items.slide_style }}">
											{% if fields.split_slider_static_items.slide_style == "overlay" %}
												<div class="title-wrapper">
													<h5>{{ slide.slider_title }}</h5>
												</div>
											{% else %}
												{% if slide.slider_title %}<h5 class="mb-3">{{ slide.slider_title }}</h5>{% endif %}
											{% endif %}
											<a class="w-full btn btn-underline" href="{{ slide.link.url }}">
												{{ slide.link.title }}
											</a>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
						<div class="controls-wrapper mt-[1.5rem] inline-flex w-full justify-between relative">
							<div class="swiper-button-prev bg-primary w-fit p-3">
								<svg xmlns="http://www.w3.org/2000/svg" width="42" height="25" viewBox="0 0 42 25" fill="none">
									<path d="M12.5061 1.9876L1.99991 12.4938L12.5061 23" stroke="#093642" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
									<rect x="31.4939" y="14.2446" width="15.7593" height="3.50207" rx="1.75103" transform="rotate(-180 31.4939 14.2446)" fill="#093642"/>
									<rect x="42" y="14.2446" width="7.00413" height="3.50207" rx="1.75103" transform="rotate(-180 42 14.2446)" fill="#093642"/>
								</svg>
							</div>
							<div class="swiper-pagination"></div>
							<div class="swiper-button-next bg-primary w-fit p-3">
								<svg xmlns="http://www.w3.org/2000/svg" width="42" height="25" viewBox="0 0 42 25" fill="none">
									<path d="M29.4939 23.0124L40.0001 12.5062L29.4939 2" stroke="#093642" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
									<rect x="10.5061" y="10.7554" width="15.7593" height="3.50207" rx="1.75103" fill="#093642"/>
									<rect y="10.7554" width="7.00413" height="3.50207" rx="1.75103" fill="#093642"/>
									</svg>	
							</div>
						</div>
					</div>
					<div class="right text-white h-full flex flex-col {{ fields.split_slider_static_items.text_alignment }} col-span-12 sm:col-span-8">
						<h2 class="mb-8 title">{{ fields.split_slider_static_items.title }}</h2>
						<div class="mb-6 intro-text">{{ fields.split_slider_static_items.text }}</div>
						{% if fields.split_slider_static_items.link %}
							<a class="btn btn-primary w-fit" href="{{ fields.split_slider_static_items.link.url }}">{{ fields.split_slider_static_items.link.title }}</a>
						{% endif %}
					</div>
				{% endif %}
			</div>
		</div>
		{% if fields.split_slider_static_items.slider_side == "right" %}
			<script>
				var swiper = new Swiper(".split-swiper-{{ instance }}", {
					slidesPerView: 1,
					spaceBetween: 30,
					pagination: {
						el: ".split-slider-wrapper-{{ instance }} .swiper-pagination",
						clickable: true,
					},
					navigation: {
						nextEl: ".split-slider-wrapper-{{ instance }} .swiper-button-next",
						prevEl: ".split-slider-wrapper-{{ instance }} .swiper-button-prev",
					},
					breakpoints: {
						640: {
							slidesPerView: "auto"
						}
					},
					on: {
						reachEnd: function() {
							this.snapGrid = [...this.slidesGrid];
							setTimeout(() => {
								document.querySelector('.split-slider-wrapper-{{ instance }} .swiper-button-next').click()
								clearTimeout()
							}, 1);
						},
					}
				});
			</script>
		{% else %}
			<script>
				var swiper = new Swiper(".split-swiper-{{ instance }}", {
					slidesPerView: 1,
					spaceBetween: 30,
					pagination: {
						el: ".split-slider-wrapper-{{ instance }} .swiper-pagination",
						clickable: true,
					},
					navigation: {
						nextEl: ".split-slider-wrapper-{{ instance }} .swiper-button-next",
						prevEl: ".split-slider-wrapper-{{ instance }} .swiper-button-prev",
					},
				});
			</script>
		{% endif %}
	</div>
{% endif %}
{% if fields.style == "timeline" %}
